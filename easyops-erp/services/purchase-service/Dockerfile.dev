FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app

# Copy the entire repository to ensure all modules are available
COPY . .

# Build only Purchase service
RUN mvn clean package -pl services/purchase-service -am -DskipTests spring-boot:repackage

FROM eclipse-temurin:21-jre
WORKDIR /app

COPY --from=build /app/services/purchase-service/target/purchase-service-1.0.0.jar app.jar

EXPOSE 8095

ENTRYPOINT ["java", "-jar", "app.jar"]
