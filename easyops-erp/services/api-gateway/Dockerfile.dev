# Development Dockerfile for API Gateway
FROM maven:3.9-eclipse-temurin-21

# Set working directory
WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy full repo to preserve multi-module layout
COPY . .

# Download dependencies for this module (and required modules)
# RUN mvn -B -q -pl services/api-gateway -am dependency:go-offline
# Dependencies will be downloaded on first container run instead

# Expose port
EXPOSE 8081

# Health check
# Note: start-period allows time for Maven dependency downloads on first run
HEALTHCHECK --interval=30s --timeout=3s --start-period=120s --retries=3 \
  CMD curl -f http://localhost:8081/actuator/health || exit 1

# Run the application from the module directory
WORKDIR /app/services/api-gateway
CMD ["mvn", "spring-boot:run", "-Dspring-boot.run.profiles=dev"]
