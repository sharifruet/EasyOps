# Development Dockerfile for Auth Service
FROM maven:3.9-eclipse-temurin-21

# Set working directory
WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Copy full repo to preserve multi-module layout
COPY . .

# Download dependencies for this module (and required modules)
# Note: dependency:go-offline can fail with network issues, so we skip it in dev mode
# Dependencies will be downloaded on first run instead
# RUN mvn -B -q -pl services/auth-service -am dependency:go-offline

# Expose port
EXPOSE 8083

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8083/actuator/health || exit 1

# Run the application from the module directory
WORKDIR /app/services/auth-service
CMD ["mvn", "spring-boot:run", "-Dspring-boot.run.profiles=dev"]
