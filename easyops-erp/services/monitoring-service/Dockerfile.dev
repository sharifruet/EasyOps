FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app

# Copy parent pom first
COPY pom.xml .

# Copy monitoring service
COPY services/monitoring-service ./services/monitoring-service

# Build the service
RUN mvn clean package -pl services/monitoring-service -am -DskipTests

FROM eclipse-temurin:21-jre-alpine
WORKDIR /app

COPY --from=build /app/services/monitoring-service/target/*.jar app.jar

EXPOSE 8087

ENTRYPOINT ["java", "-jar", "app.jar"]

