FROM maven:3.9-eclipse-temurin-21 AS build

WORKDIR /app

# Copy parent pom
COPY pom.xml .

# Copy all service poms (needed for reactor build)
COPY services/*/pom.xml services/

# Download dependencies (cached layer)
# RUN mvn -B -q -pl services/sales-service -am dependency:go-offline

# Copy only sales-service source code
COPY services/sales-service services/sales-service

# Build the application (standalone without reactor)
WORKDIR /app/services/sales-service
RUN mvn clean package -DskipTests

# Check the JAR was created
RUN ls -lh target/*.jar

# Runtime stage
FROM eclipse-temurin:21-jdk

WORKDIR /app

# Copy the built jar (exclude .original file)
COPY --from=build /app/services/sales-service/target/sales-service-1.0.0.jar app.jar

# Expose port
EXPOSE 8093

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=60s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8093/actuator/health || exit 1

# Run the application
ENTRYPOINT ["java", "-jar", "app.jar"]

